import shutil
import sys
import os.path
import os
import getopt
import string

INIPREFIX='/etc/jailkit'
LIBDIR='/usr/share/jailkit'
sys.path.append(LIBDIR)
import jk_lib

def startcopy(config, chroot, filestocopy, checklibs=1):
	jk_lib.copy_binaries_and_libs(chroot,filestocopy,config['force'] , config['verbose'], try_hardlink=config['hardlink'])

def usage():
	print "Usage: "+sys.argv[0]+" [OPTIONS]"
	print ""
	print "-h --help              : this help screen"
	print "-v, --verbose          : show what is being copied"
	print "-f, --force            : overwrite existing files"
	print "-k, --hardlink         : use hardlinks if possible"
	print ""

def testargs(args):
	if (len(args) < 2):
		print "ERROR: need at least a chroot directory and a file to copy"
		print ""
		usage()
		sys.exit(2)
	if (not os.path.isdir(args[0])):
		print "ERROR: "+args[0]+" is not a directory"
		print ""
		usage()
		sys.exit(3)
	for file in args[1:]:
		if (not os.path.exists(file)):
			print "ERROR: "+file+" does not exist"
			print ""
			usage()
			sys.exit(4)

def main():
	if (os.getuid()!=0):
		print 'cannot run without root privileges'
		sys.exit(5)
	try:
		opts, args = getopt.getopt(sys.argv[1:], 'fhvk', ['help', 'verbose', 'force', 'hardlink'])
	except getopt.GetoptError:
		usage()
		sys.exit(1)
	config = {}
	config['verbose'] = 0
	config['force'] = 0
	config['hardlink'] = 0
	for o, a in opts:
		if o in ("-h", "--help"):
			usage()
			sys.exit()
		if o in ("-v", "--verbose"):
			config['verbose'] = 1
		if o in ("-f", "--force"):
			config['force'] = 1
		if o in ("-k", "--hardlink"):
			config['hardlink'] = 1
	testargs(args)
	if (args[0][-1] != '/'): args[0] = args[0]+'/'
	if (jk_lib.chroot_is_safe(args[0])!=1):
		sys.exit(6)
	startcopy(config, args[0], args[1:])

if __name__ == "__main__":
    main()
