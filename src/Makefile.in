INSTALL = @INSTALL@
CC = @CC@
CFLAGS = @CFLAGS@ -g -O2 -Wall -pipe
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
PTHREAD_LIBS = @PTHREAD_LIBS@
prefix = @prefix@

#CFLAGS = ${CFLAGS} -g -O2 -Wall -pipe

SRCS = jk_socketd.c iniparser.c jk_lsh.c jk_chrootsh.c jk_lib.c jk_chrootlaunch.c jk_procmailwrapper.c utils.c wordexp.c
OBJS = $(SRCS:.c=.o)
BINARIES = @BINARIES@
HAVEPROCMAIL = @HAVEPROCMAIL@

.c.o: $(SRCS)
	$(CC) $(DEFS) $(CFLAGS) -c -o $@ $<

all: ${BINARIES}

jk_chrootlaunch: jk_chrootlaunch.o
	$(CC) $(DEFS) -o jk_chrootlaunch jk_chrootlaunch.o $(LDFLAGS) $(LIBS)

jk_socketd: jk_socketd.o jk_lib.o utils.o iniparser.o
	$(CC) $(DEFS) -o jk_socketd jk_socketd.o jk_lib.o utils.o iniparser.o $(LDFLAGS) $(LIBS) $(PTHREAD_LIBS)

jk_lsh: jk_lsh.o iniparser.o jk_lib.o utils.o wordexp.o
	$(CC) $(DEFS) -o jk_lsh jk_lsh.o iniparser.o jk_lib.o utils.o wordexp.o $(LDFLAGS) $(LIBS)

jk_chrootsh: jk_chrootsh.o iniparser.o jk_lib.o utils.o
	$(CC) $(DEFS) -o jk_chrootsh jk_chrootsh.o iniparser.o jk_lib.o utils.o $(LDFLAGS) $(LIBS)

jk_procmailwrapper: jk_procmailwrapper.o jk_lib.o utils.o
	$(CC) $(DEFS) -o jk_procmailwrapper jk_procmailwrapper.o jk_lib.o utils.o $(LDFLAGS) $(LIBS)

clean:
	rm -f ${BINARIES}
	rm -f *.o
	rm -f *~

distclean: clean
	rm -f Makefile

install: ${BINARIES}
	${INSTALL} -d -m 755 ${prefix}
	${INSTALL} -d -m 755 ${prefix}/bin
	${INSTALL} -d -m 755 ${prefix}/sbin
	${INSTALL} -g 0 -o 0 -s -m 0755 jk_socketd ${prefix}/sbin/
	${INSTALL} -g 0 -o 0 -s -m 0755 jk_chrootlaunch ${prefix}/sbin/
	${INSTALL} -g 0 -o 0 -s -m 0755 jk_lsh  ${prefix}/bin/
	${INSTALL} -g 0 -o 0 -s -m 4755 jk_chrootsh  ${prefix}/bin/
	if [ ${HAVEPROCMAIL} -eq "1" ]; then \
		${INSTALL} -g 0 -o root -s -m 4755 jk_procmailwrapper  ${prefix}/bin/ ;\
	fi
	
uninstall:
	rm -f  ${prefix}/sbin/jk_socketd
	rm -f  ${prefix}/sbin/jk_chrootlaunch
	rm -f  ${prefix}/bin/jk_lsh
	rm -f  ${prefix}/bin/jk_chrootsh
	rm -f  ${prefix}/bin/jk_procmailwrapper
	echo "You must manually remove jk_chrootsh from /etc/shells"
	# remove jk_chrootsh from /etc/shells

